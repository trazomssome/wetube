extends templates/layout
include mixins/video

block content
    div.profile__data
    
        if isHeroku
            img.avatar(src=user.avatarUrl)
        else
            img.avatar(src=`/${user.avatarUrl}`)
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found